<ol class="breadcrumb">
  <li class="breadcrumb-item active">Home</li>
</ol>

<div class="pt-3">
  <div class="row">
    <div class="col-lg-12 pb-lg-3">
      <h2>Courses</h2>
    </div>
  </div>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-lg-4 pb-3">
        <div class="card h-100">
          <div style="height: 100px; width: 100%; display: block; background-color: #CCCCCC"></div>
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted"><%= course.term %></h6>
            <h4 class="card-title"><a href="/courses/<%= course.id %>/assignments"><%= course.name %> (<%= course.section %>)</a></h4>
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <span class="text-white">25%</span>
              </div>
            </div>
            <a href="#" class="card-link">Edit</a>
            <a href="#" class="card-link">Share</a>
            <a href="#" class="card-link">Delete</a>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-lg-4 pb-3">
      <div class="card h-100">
        <div class="card-body">
          <!--center the 'plus' button-->
          <div class="center h-100">
            <a href="#" class=" stretched-link" data-remote="true" data-toggle="modal" data-target="#modal-window">
              <i class="fas fa-plus-circle fa-4x"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>